/var/log/nginx/*.log {
        daily
        dateext
        dateformat -%Y%m%d
        missingok
        rotate 180
        compress
        delaycompress
        notifempty
        create 644 root root
        sharedscripts
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
        endscript
}